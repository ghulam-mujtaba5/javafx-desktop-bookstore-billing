<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.t.SettingsScreen" spacing="18" alignment="TOP_LEFT" style="-fx-padding: 32;">
    <Label text="Settings" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <GridPane hgap="16" vgap="12">
        <Label text="Change Password:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <PasswordField fx:id="currentPasswordField" promptText="Current password" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        <Label text="New Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <PasswordField fx:id="newPasswordField" promptText="New password" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <Button fx:id="changePasswordButton" text="Change Password" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="button" />
    </GridPane>
    <Separator />
    <GridPane hgap="16" vgap="12">
        <Label text="Shop Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="shopNameField" promptText="Shop Name" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="addressField" promptText="Address" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <Label text="Mobile Number:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="mobileNumberField" promptText="Mobile Number" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        <Button fx:id="saveShopButton" text="Save Shop Info" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="button" />
    </GridPane>
    <Label fx:id="messageLabel" textFill="#0078d7" />
</VBox>
